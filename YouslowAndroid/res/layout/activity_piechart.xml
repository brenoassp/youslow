    <LinearLayout
        android:id="@+id/piechart2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:paddingBottom="30dp"  />  
        
     <LinearLayout
        android:id="@+id/piechart3"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:paddingBottom="30dp"  /> 
        
     <LinearLayout
        android:id="@+id/piechart4"
